<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://productLocalizedEdit.caption"
        focusComponent="form">
    <data>
        <instance id="productLocalizedDc"
                  class="org.anasoid.jmixjpaodatademo.core.entity.catalog.ProductLocalized">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
        <collection id="productDl" class="org.anasoid.jmixjpaodatademo.core.entity.catalog.Product">
            <fetchPlan extends="_base"/>
            <loader id="productDl">
                <query>
                    <![CDATA[select e from Product e]]>
                </query>
            </loader>
        </collection>
        <collection id="languageDl" class="org.anasoid.jmixjpaodatademo.core.entity.i18n.Language">
            <fetchPlan extends="_base"/>
            <loader id="catalogVersionDl">
                <query>
                    <![CDATA[select e from Language e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="productLocalizedDc">
            <column width="350px">
                <textField id="pkField" property="pk" editable="false" datatype="long"/>
                <!--<textField id="itemField" property="item" editable="false" />-->
                <entityComboBox id="languageField" property="lang"
                                pageLength="10" optionsContainer="languageDl">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"></action>
                        <action id="entityClear" type="entity_clear"></action>
                    </actions>
                </entityComboBox>
                <textField id="nameField" property="name"/>
                <textField id="descriptionField" property="description"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
